@page
@model ForgotPasswordConfirmation
@{

    Layout = null;
    ViewData["Title"] = "Forgot password confirmation";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Workshop platform</title>
    <!-- CSS Files -->
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link href="~/css/site.min.css" rel="stylesheet" />
</head>
<body class="register-confirm-page">
    <div class="row justify-content-center">
        <div class="col-lg-4 d-none d-lg-block pt-3 pr-4">
            <img src="/imgs/check_email.png" id="email-img" alt="Confirmation email has been sent">
        </div>
        <div class="col-lg-5 col-md-9 pt-5">
            <div class="card shadow-lg mt-5 pt-3 pb-3">
                <div class="card-body p-0">
                    <div class="row mt-4">
                        <div class="col-12 p-5">
                            <div class="text-center p-3">
                                <h1 class="h2 mb-4 text-primary">Check your email !</h1>
                                <div class="mb-3 text-muted">
                                    <p>
                                        We've emailed you instructions for setting your password,
                                        if an account exists with the email you entered. You should receive them shortly.
                                    </p>

                                    <p class="small-text">
                                        <span>
                                            If you don't receive an email, please make sure you've entered the address you registered with, and check your spam folder.
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>