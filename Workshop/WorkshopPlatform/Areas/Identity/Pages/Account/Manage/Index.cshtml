@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="col-md-6" style="float:right">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="d-flex justify-content-center">
                    <div class="mb-1  file-field" style="text-align:center">
                        <br />
                        @if (Model.Image!=null)
                        {
                            <img src="~/uploads/@Model.Input.Image"
                                 class="rounded-circle z-depth-1-half avatar-pic" style="max-width: 220px;max-height: 300px;" alt="example placeholder avatar">
                        }
                        else
                        {
                            <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                                 class="rounded-circle z-depth-1-half avatar-pic" style="width: 220px;" alt="example placeholder avatar">
                        }
                        <br /><br />
                        <label class="btn" asp-for="File">Add Profile photo</label><br />
                        <div class="d-flex form-group">
                            <input asp-for="File" name="file" type="file" class="form-control-file" style="width: 300px; " />
                        </div>
                    </div>

                </div>
                <br />
            </div>
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
              
                <br />

                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}