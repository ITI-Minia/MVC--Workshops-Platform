@page  "/settings/changePassword"
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<h4 class="text-muted page-title">Change your password</h4>
<div class="row">
    <div class="col-md-12 pl-lg-5 pr-lg-5">
        <form id="change-password-form" class="setting-form" method="post">
            <div class="form-group pb-3">
                <div class="row">
                    <label asp-for="Input.OldPassword" class="col-12 col-md-3"></label>
                    <input asp-for="Input.OldPassword" class="col-12 col-md-9 form-control" />
                </div>  <div class="row">
                    <div class="d-none d-md-block col-3"></div>
                    <div class="col-12 col-md-9">
                        <span asp-validation-for="Input.OldPassword" class="small text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group pb-3">
                <div class="row">
                    <label asp-for="Input.NewPassword" class="col-12 col-md-3"></label>
                    <input asp-for="Input.NewPassword" class="col-12 col-md-9 form-control" />
                </div>  <div class="row">
                    <div class="d-none d-md-block col-3"></div>
                    <div class="col-12 col-md-9">
                        <span asp-validation-for="Input.NewPassword" class="small text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group pb-3">
                <div class="row">
                    <label asp-for="Input.ConfirmPassword" class="col-12 col-md-3"></label>
                    <input asp-for="Input.ConfirmPassword" class="col-12 col-md-9 form-control" />
                </div>  <div class="row">
                    <div class="d-none d-md-block col-3"></div>
                    <div class="col-12 col-md-9">
                        <span asp-validation-for="Input.ConfirmPassword" class="small text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row justify-content-end mb-5">
                <button id="update-password" type="submit" class="btn btn-primary btn-rounded">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}