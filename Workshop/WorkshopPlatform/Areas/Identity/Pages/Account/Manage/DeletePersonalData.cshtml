@page "/settings/deleteAccount"
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="pl-lg-5 pr-lg-5">
    <div class="mb-5">
        <h4 class="text-muted pb-2">@ViewData["Title"]</h4>
        <p class="text-danger small">
            Deleting this data will permanently remove your account, and this cannot be recovered.
        </p>
    </div>
    <div>
        <form id="delete-user" method="post" class="form-group setting-form">
            @if (Model.RequirePassword)
            {
                <div class="form-group pb-2">
                    <div class="row">
                        <label asp-for="Input.Password" class="col-12 col-md-2"></label>
                        <input asp-for="Input.Password" class="col-12 col-md-10 form-control" />
                    </div>  <div class="row">
                        <div class="d-none d-md-block col-2"></div>
                        <div class="col-12 col-md-10">
                            <span asp-validation-for="Input.Password" class="small text-danger"></span>
                        </div>
                    </div>
                </div>
            }
            <div class="form-group row mb-5 justify-content-end">
                <button id="update-profile-button" type="submit" class="btn btn-danger btn-rounded">
                    Delete data and close my account
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}