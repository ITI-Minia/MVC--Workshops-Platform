@page
@model PersonalDataModel
@{
    ViewData["Title"] = "PersonalData";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
@{ if (TempData["Done"] != null)
    {
        <div class="alert alert-primary alert-dismissible">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @TempData["Done"]
        </div>
    }
}
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-6">

                <div class="form-group">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Government"></label>
                    <input asp-for="Input.Government" class="form-control" />
                    <span asp-validation-for="Input.Government" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.CarBrand"></label>
                    <input asp-for="Input.CarBrand" class="form-control" />
                    <span asp-validation-for="Input.CarBrand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.CarModel"></label>
                    <input asp-for="Input.CarModel" class="form-control" />
                    <span asp-validation-for="Input.CarModel" class="text-danger"></span>
                </div>


                <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}