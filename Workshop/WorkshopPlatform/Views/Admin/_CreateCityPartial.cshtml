@model WorkshopPlatform.Models.City

<form asp-controller="Admin" asp-action="CreateCity">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GovernmentId" class="control-label"></label>
        <select asp-for="GovernmentId" class="form-control" asp-items="ViewBag.GovernmentId"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary float-right mt-4 mb-4" />
    </div>
</form>