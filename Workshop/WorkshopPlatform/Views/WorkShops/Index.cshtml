@model IEnumerable<Workshop.Models.WorkShop>

@{
    ViewData["Title"] = "Index";
}


<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Work Shops</title>
    <link href="~/sass/site.css" rel="stylesheet" />
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>    

    <div class="container-fluid workShops" id="workShops">
        <div class="input-group searchContent">
            <div class="form-outline search">
                <form id="form1" method="get" asp-action="Search">
                    <input asp-action="Search" type="search" id="form1" class="form-control searchInput" placeholder="Search" name="id"/>
                    <a  class="btn btn-primary wsbtn" onclick="document.getElementById('form1').submit();" ><i class="fas fa-search"></i></a>
                </form>
                    </div>          
        </div>
        @{
            int i = 0;

            int j = 0;
            @for (i = 0; i < Model.Count(); i++)
            {
                <div class="row">
                    <div class="col-md-6 col-sm-12 WshopTd">
                        <div class='card'>
                            <div class='logo' style="background-image: @Model.ElementAt(i).Logo">
                            </div>
                            <div class='card-text'>
                                <div class='portada' style=' background-image: @Model.ElementAt(i).Image'>   </div>
                                <div class='title-total'>
                                    <div class='title'>
                                        
                                        @for (j = 0; j < Model.ElementAt(i).Rate; j++)
                                        {<i class='fa fa-star rate'></i>}
                                        @if (Model.ElementAt(i).Rate % 1 != 0)
                                        {
                                            <i class='fa fa-star-half-empty rate'></i>
                                            j++;
                                        }
                                        @for (j = j; j < 5; j++)
                                        {<i class='fa fa-star-o rate'></i>}
                                    </div>
                                    <h2>
                                        @Html.DisplayFor(modelItem => Model.ElementAt(i).Name)
                                    </h2>
                                    <div class='address'>
                                        @Html.DisplayFor(modelItem => Model.ElementAt(i).Address)
                                    </div>
                                    <div class='actions mt-auto btn'>
                                        <a asp-action="workshopcollector" class='wsbtn btn' asp-route-id=@Model.ElementAt(i).Id><div>Show more</div></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (i + 1 < Model.Count())
                    {
                        i++;
                        <div class="col-md-6 col-sm-12 WshopTd">
                            <div class='card'>
                                <div class='logo' style="background-image: @Model.ElementAt(i).Logo">
                                </div>
                                <div class='card-text'>
                                    <div class='portada' style=' background-image: @Model.ElementAt(i).Image'>   </div>
                                    <div class='title-total'>
                                        <div class='title'>
                                            @for (j = 0; j < Model.ElementAt(i).Rate; j++)
                                            {<i class='fa fa-star rate'></i>}
                                            @if (Model.ElementAt(i).Rate % 1 != 0)
                                            {
                                                <i class='fa fa-star-half-empty rate'></i>
                                                j++;
                                            }
                                            @for (j = j; j < 5; j++)
                                            {<i class='fa fa-star-o rate'></i>}
                                        </div>
                                        <h2>
                                            @Html.DisplayFor(modelItem => Model.ElementAt(i).Name)
                                        </h2>
                                        <div class='address'>
                                            @Html.DisplayFor(modelItem => Model.ElementAt(i).Address)
                                        </div>
                                        <div class='actions mt-auto btn'>
                                            <a asp-action="workshopcollector" class='wsbtn btn' asp-route-id="Model.ElementAt(i).Id"><div>Show more</div></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <br />
            }

        }

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>
</body>

</html>
