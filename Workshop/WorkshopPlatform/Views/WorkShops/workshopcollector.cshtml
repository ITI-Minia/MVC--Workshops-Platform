
@using Workshop.Models;

@model dynamic

@{
    ViewBag.Title = "WorkShop";
}


<section class=" aboutUS" style="width:70%; margin:auto;display:block">

    <div class="container-fluid">
        <div class="row d-md-flex justify-content-end">
            @foreach (WorkShop item in Model.aboutwarsha)
            {

                <div class="col-xl-6 col-md-6 warshaimg" style="background-image:url(@item.Image)">

                </div>

                <div class="col-md-6 col-xl-6 p-3 py-5 pl-lg-5">

                    <h3><span style="color: black;"> About</span> US</h3>
                    <br>
                    <p>
                        <i class="fas fa-city mr-2 warshaIcon"></i><span style="">City :</span>
                        <span style="color: #171616;"> @Html.DisplayFor(modelItem => item.City) </span>
                    </p>
                    <p>
                        <i class="fa fa-user-circle mr-2 warshaIcon"></i><span>Name :</span>
                        <span style="color: #171616;">@Html.DisplayFor(modelItem => item.Name) </span>
                    </p>
                    <p>
                        <i class="fa fa-map-marker mr-2 warshaIcon "></i><span>Address :</span>
                        <span style="color: #171616;">
                            @Html.DisplayFor(modelItem => item.Address)
                        </span>
                    </p>
                    <p>
                        <i class="fa fa-phone mr-2 warshaIcon"></i><span>Phone :</span>
                        <span style="color: #171616; ">@Html.DisplayFor(modelItem => item.User.PhoneNumber) </span>
                    </p>
                    <p>
                        <i class="fa fa-percent mr-2 warshaIcon"></i><span>Rate :</span>
                        <span style="color: #171616;">
                            @Html.DisplayFor(modelItem => item.Rate)
                        </span>
                    </p>

                </div>
            }
        </div>
    </div>
</section>

<section class="services">
    <div class="container-fluid">
        <div class="row d-md-flex justify-content-center p-5">
            <h2 class="pb-5"> Service & price </h2>


            <div id="demo" class="carousel slide col-xl-12 text-center">

                <!-- Indicators -->

                <ul class="carousel-indicators" id="serviceList">
                    <li data-target="#demo" data-slide-to="0" class="active Warshacircle"></li>
                    <li data-target="#demo" data-slide-to="1" class="Warshacircle">
                    </li>
                    <li data-target="#demo" data-slide-to="2" class="Warshacircle"></li>

                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner text-center warshaSlideShow " id="service_price">
                    @foreach (Service item in Model.warshaservices)
                    {
                        @if (ViewBag.servcount % 3 == 0)
                        {
                            @if (ViewBag.servcount == 0)
                            {
                                @:<div class="carousel-item active WarshaCurosal">
                                }
                                else
                                {
                                    @:<div class="carousel-item  WarshaCurosal">
                                    }
                            @:<div class="card-deck ">
                            }


                        <div class="card cardService">

                            <div class="card-body text-center">
                                <span class="serviceName">@item.Title</span><br>
                                <span class="price"><sup>$</sup> <span class="number">@item.Price</span></span><br>
                                <img src="@item.Image"
                                     class="img-thumbnail priceImage">
                                <br><br>
                                @*<a href="update.html">
                                        <button class="btn btn-secondary AddToCard row"
                                                data-target="#myModals" data-toggle="modal">
                                            Edit
                                            Service
                                        </button>
                                    </a>*@

                                <br>

                            </div>
                        </div>
                        ViewBag.servcount++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

</section>
