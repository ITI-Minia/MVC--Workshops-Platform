<section class="review warshaimg" style="background-image: url(/imgs/wallpaper.jpg);">
    <div class="overlay"></div>
    <div class="container">
        @*<form >*@
        <div class="row d-md-flex justify-content-end">
            <div class="col-md-12 col-lg-6 p-3 py-5 pl-lg-5">
                <span>Help us to improve our Services</span>
                <h2 class="mb-4">Write Review</h2>
                <div class="rating-wrap ">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="yourComment">Rate US</div>
                        </div>
                        @*<input asp-for="Rate" type="hidden" id="rate" />
                            <input asp-for="Date" type="hidden" id="date" />*@


                        <div class="col-sm-6">
                            <div class="center">
                                <fieldset class="rating">
                                    <input type="radio" id="star5" class="star" name="rating" value="5" /><label for="star5" class="full" title="Awesome"></label>
                                    <input type="radio" id="star4.5" class="star" name="rating" value="4.5" /><label for="star4.5" class="half"></label>
                                    <input type="radio" id="star4" class="star" name="rating" value="4" /><label for="star4" class="full"></label>
                                    <input type="radio" id="star3.5" class="star" name="rating" value="3.5" /><label for="star3.5" class="half"></label>
                                    <input type="radio" id="star3" class="star" name="rating" value="3" /><label for="star3" class="full"></label>
                                    <input type="radio" id="star2.5" class="star" name="rating" value="2.5" /><label for="star2.5" class="half"></label>
                                    <input type="radio" id="star2" class="star" name="rating" value="2" /><label for="star2" class="full"></label>
                                    <input type="radio" id="star1.5" class="star" name="rating" value="1.5" /><label for="star1.5" class="half"></label>
                                    <input type="radio" id="star1" class="star" name="rating" value="1" /><label for="star1" class="full"></label>
                                    <input type="radio" id="star0.5" class="star" name="rating" value="0.5" /><label for="star0.5" class="half"></label>
                                </fieldset>
                            </div>

                        </div>
                    </div>



                </div>

                <input id="txtArea" placeholder="Write your Review" />

                <br>
                <br>
                <input type="submit" onclick="post()" class="btn btn-secondary btn-block " data-toggle="modal" data-target="#myModal"
                       value="Submit Your Review" />
                <!-- The Modal -->
                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title warshaModalName">Warsha</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                <p id="Thanks"></p>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
        @*</form>*@
    </div>

</section>

<section class="clientFeedback">
    <div class="container-fluid">
        <div class="row d-md-flex  p-5">
            <h2 class="pb-5 feedback"> Clients & Feedbacks </h2>


            <div id="demo2" class="carousel slide col-xl-12 text-center">
                <!-- commentlist for create li in js -->
                <ul class="carousel-indicators" id="commentsList">
                    <li data-target="#demo2" data-slide-to="0" class="active Warshacircle"></li>
                    <li data-target="#demo2" data-slide-to="1" class="Warshacircle">
                    </li>
                    <li data-target="#demo2" data-slide-to="2" class="Warshacircle"></li>

                </ul>
                <div class="carousel-inner text-center warshaComments warshaSlideShow" id="inp">
                    @foreach (WorkshopRate item in Model.WarshaRate)
                    {
                        @if (ViewBag.itemcount % 3 == 0)
                        {
                            @if (ViewBag.itemcount == 0)
                             {
                                @:<div class="carousel-item active WarshaCurosal">
                             }
                             else
                             {
                                    @:<div class="carousel-item  WarshaCurosal">
                              }
                            @:<div class="card-deck ">
                            }
                        <div class="card border p-3 clientFeedbackCard ">
                            <div class="commentIconBackground">
                                <span class="fa fa-quote-left commentIcon"></span>
                            </div>

                            <div class="row" style="display: flex;">
                                @{ if (item.UserProfile.Image == null)
                                    {
                                        <img src="~/imgs/person.png" class=" mt-3 ml-3 rounded-circle clientImage" />
                                    }
                                    else
                                    {

                                        <img src=" @item.UserProfile.Image"
                                             class=" mt-3 ml-3 rounded-circle clientImage">
                                    }
                                }
                                <div class="media-body pl-3 mt-3 userInfo">

                                    <h5 class="userName">@Html.DisplayFor(modelItem => item.UserProfile.User.UserName) </h5>
                                    <p class="date">@Html.DisplayFor(modelItem => item.Date)</p>
                                </div>
                            </div>

                            <p class="pl-2 pt-4 userComment">
                                @Html.DisplayFor(modelItem => item.Review)
                            </p>
                            <p style="text-align:right; margin-right:50px;font-size:larger">Rate : <span style="color: #2748BA">@item.Rate / 5</span></p>
                        </div>
                        ++ViewBag.itemcount;
                    }


                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>

</section>



